{{#if isRejected}}
  <div class="row">
    <div class="small-12 columns">
      <div class="alert-box secondary">Problem connecting to Foursquare. Please try again later.</div>
    </div>
  </div>
{{/if}}

<div class="row search-bar">
  <div class="small-3 medium-2 columns">
    <label for="right-label" class="inline right">Venue search</label>
  </div>
  <div class="small-9 medium-10 columns">
    {{input value=query class="foursquare-search" placeholder="Venue search..."}}
  </div>
</div>

<div class="row">
  <div class="small-9 small-offset-3 medium-10 medium-offset-2 columns">
    <ul class="side-nav venue-list">
      {{#if noResults}}
        <li><a>No results, try being less specific.</a></li>
      {{else}}
        {{#each venue in model}}
          <li>
            {{#link-to showRouteName venue.id class='venue-link'}}
              <img {{bind-attr src=venue.icon}} class='venue-icon'>
              {{venue.name}} <small>{{venue.location.formattedAddress}}</small>
            {{/link-to}}
          </li>
        {{/each}}
      {{/if}}
    </ul>
  </div>
</div>
