<div class="row">
  <div class="small-12 columns">
    {{#if session.isAuthenticated}}
      {{#link-to 'crawls.new' class="button small new-crawl right"}}
        Add crawl
      {{/link-to}}
    {{/if}}
  </div>
</div>

{{#if isRejected}}
  <div class="row">
    <div class="small-12 columns">
      <div class="alert-box secondary">You do not have permission to access that page.</div>
    </div>
  </div>
{{/if}}
{{#if isNotFound}}
  <div class="row">
    <div class="small-12 columns">
      <div class="alert-box secondary">The page you requested does not exist.</div>
    </div>
  </div>
{{/if}}

<div class="row">
  {{#if session.isAuthenticated}}
    <div class="small-12 medium-6 columns featured-crawls">
      <h3>Featured Crawls</h3>
      {{#each crawl in featuredCrawls}}
        <div class="row">
          {{crawl-item crawl=crawl classNames='small-12 columns'}}
        </div>
      {{/each}}
    </div>
    <div class="small-12 medium-6 columns owned-crawls">
      <h3>Your Crawls</h3>
      {{#if emptyOwnedCrawls}}
        <div class="row">
          <div class="small-12 columns crawl-row">
            <div class="alert-box secondary">
              You haven't created any crawls yet. Why don't you try to add one?
            </div>
          </div>
        </div>
      {{else}}
        {{#each crawl in ownedCrawls}}
          <div class="row">
            {{crawl-item crawl=crawl action='deleteCrawl' deleteable=true classNames='small-12 columns'}}
          </div>
        {{/each}}
      {{/if}}
    </div>
  {{else}}
    <div class="small-12 columns featured-crawls">
      <h3>Featured Crawls</h3>
      <ul class="small-block-grid-1 medium-block-grid-2">
        {{#each crawl in featuredCrawls}}
          {{crawl-item crawl=crawl tagName='li'}}
        {{/each}}
      </ul>
    </div>
  {{/if}}
</div>
