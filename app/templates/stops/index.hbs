{{#each stop in controller}}
  <div class="stop">
    <div class="row stop-row">
      <div class="small-3 columns">
        <img {{bind-attr src=stop.photoUrl}} class="photo">
      </div>
      <div class="small-8 columns">
        <h3 class="stop-name">
          <span>{{stop.name}}</span>
          {{#if controller.isOwner}}
            <small>
              {{#link-to 'venues.edit' stop class='edit'}}edit{{/link-to}}
            </small>
          {{/if}}
        </h3>
        <h4 class="venue-name">{{stop.venueName}}</h4>
        <p>{{stop.description}}</p>
        <ul class="unformatted-list">
          {{#each line in stop.location}}
            <li>{{line}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="small-1 columns">
        {{#if controller.isOwner}}
          <button class="button expand up" {{action 'moveStop' stop 'up'}}>
            {{fa-icon "fa-arrow-up" size=2}}
          </button>
          <button class="button expand down" {{action 'moveStop' stop 'down'}}>
            {{fa-icon "fa-arrow-down" size=2}}
          </button>
          <button class="button expand alert" {{action 'delete' stop}}>
            {{fa-icon "fa-times" size=2}}
          </button>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <hr>
    </div>
  </div>
{{/each}}
