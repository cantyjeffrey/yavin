{{#each stop in model}}
  <div class="row">
    <div class="small-offset-4 small-8 large-offset-4 large-8 columns">
      <h3>{{stop.name}}</h3>
    </div>
  </div>
  <div class="row">
    <div class="small-4 large-4 columns">
      <img {{bind-attr src=stop.venue.photoUrl}}>
    </div>
    <div class="small-8 large-8 columns">
      <h4>{{stop.venue.name}}</h4>
      <p>{{stop.venue.description}}</p>
      <p>{{stop.venue.location}}</p>
    </div>
  </div>
{{/each}}
